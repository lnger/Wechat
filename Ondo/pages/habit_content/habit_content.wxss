/* pages/habit_content/habit_content.wxss */
.bgp{
    position: fixed;
    top: 0;
    z-index: -1;
    height: 454.5px;
    opacity:0.8;
  }
.icon_view{
    width: 60px;
    height: 60px;
    border-radius:50%;
    margin: 20rpx auto;
}
.icon{
    width: 60px;
    height: 60px;
    border-radius: 50%;
}
.habit_name{
    width: 95%;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 15px;
    margin-bottom:50rpx;
}
.habit_name input{
    margin-top: 12px;
    height: 50px;
    background-color: rgb(248, 246, 231); 
    border-radius: 5px;
    padding-left: 18px;
}
.habit_num{
    margin-top: 35px;
    width: 95%;
    margin-left: 8px;
}
.choose_button{
    display: block;
    margin-top: 15rpx;
    margin-left: 10rpx;
}
.choose_button view{
    display: inline-block;
    width:38px;
    height: 20px;
    background-color:white;
    border:1px  gray solid;
    border-radius: 5rpx;
    font-size: 14px;
    text-align: center;
    padding-top: 3px;
    margin-right: 10rpx;
}
.choose_button view:hover{
    background-color:grey;
    border-radius: 5rpx;
}
.days{
    margin-top: 18px;
}
.day{
    display: inline-block;
    width: 43px;
    height:33px;
    font-size: 30sp;
    background:#66C87B;
    border: 2px green solid;
    box-shadow: 0 5rpx 5rpx gray;
    text-align: center;
    padding-top: 9px;
    margin-left: 8px;
    margin-top: 5px;
}
.day:hover{
    background-color: #FAFAFA;
    border: none;
}
.week{
    width: 200px;
    height: 40px;
    justify-content: center;
    margin-top: 10px;
}
.habit_time{
    margin-top: 35px;
    margin-left: 10px;
    width: 95%;
}
.choose_time{
    width: 95%;
    margin-top: 15px;
}
.time_item{
    display:inline-block;
    margin-right:7%;
    margin-bottom: 8px;
    width: 24%;
    height: 30px;
    text-align: center;
    padding-top: 9px;
    background-color: #FAFAFA;
    box-shadow: 0 5rpx 5rpx gray;
}
.time_item:hover{
    background:#66C87B;
    border: 2px green solid;
}
.bt{
    height: 80rpx;
    width: 20%;
    margin-left: 40%;
    margin-top: 10rpx;
    margin-bottom: 50rpx;
    border-radius:50rpx;
    background-color: #66C87B;
    font-size: 40rpx;
    padding-top: 20rpx;
    text-align: center;
    box-shadow: 0 5rpx 5rpx gray;
}
/* pages/timers/timers.wxss */
.bgp{
  position: absolute;
  top: 0;
  z-index: -1;
  height: 100%;
  opacity:0.8;
}
.container {
    display: flex;
    height: 400px;
    flex-direction: column;
    overflow: hidden;
  }
  .topBar{
    display: block;
    width: 320px;
    height: 40px;
    background-color: #2BB6C9;
  }
  .title{
    display: block;
    font-size: 20px;
    padding-top: 5px;
    color: #175dffc5;
    /* text-align: center; */
    position: relative;  /* 定位 */
  }
  .clorks{
    position: absolute;
    padding-left: 140px;
    font-size: 48rpx;
    color:white;
    font-weight: 800;
  }
  .fa.fa-calendar-check-o{
    display: inline-block;
    position: absolute;
    right: 10px;   /* 靠右 */
    top: 13px;
    color:white;
    font-weight: 800;
  }
  .timer_main {
    position: relative;
    top: -30px;
    display: flex;
    flex: 2;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: 5px solid black;
    border-radius: 400px;
    transition: all .5s;
    z-index: 1;
    background-color: white;
    opacity: 0.8;
  }
  
  .timer_time-wrap {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150px;
    height: 150px;
    text-align: center;
    transition: all .3s;
  }
  
  .timer_progress {
    position: absolute;
    top: 0;
    width: 75px;
    height: 150px;
    overflow: hidden;
    transition: all .3s;
  }
  
  .timer_progress_mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    border: 3px solid black;
    opacity: 0.8;
    border-radius: 50%;
  }
  .timer_left {
    left: 0;
  }
  .timer_right {
    right: 0;
  }
  .timer_circle {
    position: absolute;
    top: 0;
    width: 150px;
    height: 150px;
    border: 3px solid transparent;
    border-radius: 50%;
    transition: all .3s;

  }
  
  .timer_circle--left {
    left: 0;
		border-radius: 200px 0 0 200px;
		transform: rotate(45deg);
  }
  
  .timer_circle--right {
    right: 0;
		border-radius: 200px 0 0 200px;
		transform: rotate(45deg);
  }
  .timer_time-right {}

  /* 按钮透明 */
  .buttontype{
    background-color: transparent; 
  }
  .timer_time {
    font-size: 40px;
    color: black;
    font-weight: lighter;
    transition: font-size .3s;
  }
  
  .timer_taskName {
    position: absolute;
    top: -100px;
    font-size: 14px;
    letter-spacing: 5px;
    color: #fff;
  }
  
  .timer_done {
    width: 64px;
    height: 64px;
  }
  
  .timer_inputname {
    position: absolute;
    bottom: -60px;
    width: 100%;
    text-align: center;
    height: 40px;
    background-color: #f2f2f2c4;
    color: #999;
    border-radius: 5px;
  }
  
  .timer_footer {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    padding-top: 80px;
    transition: all .3s;
  }
  
  .timer .timer_ctrl {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 12px;
    color: #fff;
    width: 90px;
    height: 35px;
    margin: 0 20px;
    border-radius: 20px;
    transition: all .7s;
    background-color: #175dffc5;
  }
  .timer .timer_ctrl text {}
  /*runing style*/
  
  .timer--runing .timer_main {
    flex: 1;
  }
  
  .timer--runing .timer_time {
    font-size: 45px;
  }
  
  .timer--runing .timer_time-wrap {
    width: 220px;
    height: 150px;
  }
  
  .timer--runing .timer_progress {
    width: 100px;
    height: 150px;
  }
  
  .timer--runing .timer_circle {
    width: 100px;
    height: 150px;
  }
  
  .timer--runing .timer_footer {
    flex: 0;
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 10;
  }
  
  .timer--runing .timer_ctrl {
    background-color: #208DEA;
    height: 30px;
    margin-bottom: 20px;
    border: 1px dashed #dedede;
    border-radius: 20px;
  } 

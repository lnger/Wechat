.body{
  /* display: block; */
  height: 58px;
  width: 86%;
  margin:auto;
  margin-top: 35px;
  /* background-color:bisque; */
  border-radius: 6px;
  /* border: 1px bisque solid; */
  opacity: 0.9;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.content{
  background-color:bisque;
  width: 100%;
  height: 100%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(174px);
  transform: translateX(174px);
  margin-left: -174px
}
.hide {
  -webkit-box-orient: vertical;
}
.del{
  width: 58px;
  height:100%;
  background-color: red;
  text-align: center;
  padding-top: 14px;
  font-size: 18px;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(174px);
  transform: translateX(174px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
} 
.edit{
  width: 58px;
  height:100%;
  background-color:#f3af1b;
  text-align: center;
  padding-top: 14px;
  font-size: 18px;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(174px);
  transform: translateX(174px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.finish{
  width: 58px;
  height:100%;
  background-color:gray;
  text-align: center;
  padding-top: 14px;
  font-size: 18px;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(174px);
  transform: translateX(174px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,.touch-move-active .del,.touch-move-active .finish ,.touch-move-active .edit{
  -webkit-transform: translateX(0); 
  transform: translateX(0); 
}
.habits-images{
  display:block;
  float: left;
  width: 40px;

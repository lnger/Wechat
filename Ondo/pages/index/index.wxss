/**index.wxss**/
.bgp{
  position: absolute;
  top: 0;
  z-index: -1;
  height: 450.5px;
  opacity:0.8;
}
.topBar{
  display: block;
  width: 100%;
  height: 78px;
  text-align: center;
  background-color:#2BB6C9;
}

.clorks{
  display: block;
  padding-top:5px;
  font-size: 17px;
  font-weight: bold;
  color:white;
  border-bottom-width:10px;
  border-bottom-color: white;
  letter-spacing:8rpx;
}
.search{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 5px;
  height: 35px;
  background-color: #fff; 
  align-items: center;
}
.search image{
  display: inline;
  width: 25px;
  height: 25px;
  float: left;
  margin-top: 5px;
}
.container {
  position: absolute;
  width: 100%;
}
.container image{
  height: 100%;
}
.grid_view{
  opacity:0.8;
  display: grid;
  width: 100%;
  position: absolute;
  top: 5px;
  /* background-color:green; */
  grid-template-columns:repeat(3,100px);
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  justify-content: center;
}
/* 每块grid 包括图标和文字*/
.item{
  width: 70px;
  height: 80px;
  margin-top: 20px;
  margin-left: 10px;
}
/* 外层的圆框 */
.item_icon{
  background-color: white;
  margin: auto;
  border: 2px solid black;
  width: 60px;
  height: 60px;
  border-radius:60px;
  /* background-color: red; */
  justify-content: center;
}
.item_icon:hover{
  background-color: #FC6C6C;
}
.item text{
  text-align: center;
  display:block;
}
.item image{
  display: block;
  margin: auto;
  margin-top: 8px;
  width: 40px;
  height: 40px;
  padding: 3rpx;
}
 
/* pages/account/account.wxss */
.bgp{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  height: 1400rpx;
  width: 100%;
  opacity:0.8;
}
.topBar{
  display: block;
  height: 40px;
  text-align: center;
  background-color: #2BB6C9;

}
.topBar text{
  letter-spacing: 3px;
  display: block;
  padding-top: 6px;
  padding-left: 5px;
  font-size: 48rpx;
  color:white;
  font-weight: 800;
}
.container{
    height: 100rpx;
    width: 100%;
}
.userinfo {
    display: flex;
    flex-direction:column;
    margin-top: -150rpx;
    align-items: center;
    color: #07266e;
    font-weight: 800;
    font-size: 15pt;
  }
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    border-style: solid;
    border-color:#07266e;
  }
  .user_list{
    height: 550rpx;
    opacity:0.9;
  }
  .list_body{
    margin-top: -50px;
    align-items: center;
    color: rgb(99, 97, 97);
  }
  .items{
    display:inline-block;
    width:45%;
    height:40%;
    margin-top: 35rpx;
  }
  #items_left{
    margin-left: 20rpx;
  }
  #items_right{
    margin-left: 35rpx;
  }
  .items view{
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color:#91aef1;
    border-radius: 10px;
    border-style: solid;
    border-width: 7rpx;
    border-color: rgba(0, 0, 0, 0.466);
  }
  .items image{
    overflow: hidden;
    width: 110rpx;
    height: 110rpx;
    padding: 15rpx;
    margin: 8rpx;
    border-radius: 50%;
    background-color:rgb(255, 248, 236);
  }
  .items text{
    font-size: 15px;
    margin-left: 5px;
    color:white;
    font-weight: 800;
  }